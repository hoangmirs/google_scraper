<% provide :title, "New search result" %>
<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <h2>New search result</h2>
    <div class="row">
      <div class="panel panel-info">
        <div class="panel-heading">
          <h3>Upload Keywords File</h3>
        </div>
        <%= form_tag api_v1_search_path, id: "file-upload-form", method: :post do %>
          <div class="panel-body">
            <div class="form-group">
              <label for="keywords_file">Upload .csv File:</label>
                <%= file_field_tag :keywords_file, class: "form-control-file" %>
              <span id="keywords_file"></span>
            </div>
            <div class="form-group">
              <div class="alert alert-danger infoFileUploadForm"></div>
            </div>
          </div>
          <div class="panel-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="panel panel-info">
        <div class="panel-heading">
          <h3>Search by keyword</h3>
        </div>
        <%= form_tag api_v1_search_path, id: "keyword-form", method: :post do %>
          <div class="panel-body">
            <div class="form-group">
              <label for="keyword">Keyword:</label>
                <%= text_field_tag :keyword, nil, class: "form-control" %>
              <span id="keyword"></span>
            </div>
            <div class="form-group">
              <div class="alert alert-danger infoKeywordForm"></div>
            </div>
          </div>
          <div class="panel-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
